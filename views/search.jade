extends layout

block content
    h1 Search result for #{query}
        small Showing #{result.hits.hits.length} of #{result.hits.total} total
    table.table.table-hover
        thead
            tr
                th ID
                th Summary
                th Score
                th
        tbody
            for hit in result.hits.hits
                - var source = hit._source
                tr
                    td= source.id
                    td
                        div.result-summary= source.summary
                    td= hit._score.toFixed(3)
                    td
                        a.btn.btn-info(href='docs/' + source.id) View
    script
        include search.js
